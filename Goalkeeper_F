#################################### GAMELOOP ###################################

def Gameloop():
    global menu, about, selection, Player_1, Player_2, stats, failed, gameloop
    while gameloop:
        Paleta = randint(0,5)
        Screen.blit(Gameloop_Background, (0, 0))

        for shooter_1 in [Player_1.Shooter_1, Player_1.Shooter_2, Player_1.Shooter_3]:
            shooting = True
            pos_goalkeeper = randint(0,5)
            for event in pygame.event.get():
                while shooting:
                    if event.type == pygame.QUIT:
                        gameloop = False
                        pygame.quit()
                    if event.type == pygame.KEYDOWN:
                        if event.key == pygame.K_s:
                            if Paleta == 0:
                                if pos_goalkeeper == 0:
                                    failed += 1
                                    shooting = False
                                else:
                                    scored += 1
                                    shooting = False
                            if Paleta == 1:
                                if pos_goalkeeper == 1:
                                    failed += 1
                                    shooting = False
                                else:
                                    scored += 1
                                    shooting = False
                            if Paleta == 2:
                                if pos_goalkeeper == 2:
                                    failed += 1
                                    shooting = False
                                else:
                                    scored += 1
                                    shooting = False
                            if Paleta == 3:
                                if pos_goalkeeper == 3:
                                    failed += 1
                                    shooting = False
                                else:
                                    scored += 1
                                    shooting = False
                            if Paleta == 4:
                                if pos_goalkeeper == 4:
                                    failed += 1
                                    shooting = False
                                else:
                                    scored += 1
                                    shooting = False
                            if Paleta == 5:
                                if pos_goalkeeper == 5:
                                    failed += 1
                                    shooting = False
                                else:
                                    scored += 1
                                    shooting = False

        pygame.display.update()
        Clock.tick(64)

###################################### QUIT #####################################

Menu()

Teams_Stats_Saves.close()
pygame.quit()
