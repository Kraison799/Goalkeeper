###################################### MENU #####################################

def Menu():
    global menu, about, selection, Player_1, Player_2
    while menu:
        Mouse = pygame.mouse.get_pos()
        Click = pygame.mouse.get_pressed()
        for event in pygame.event.get():
            if event.type == pygame.QUIT:
                menu = False
                Teams_Stats_Saves.close()
                pygame.quit()

        Screen.blit(Menu_Background, (0, 0))
        ### Buttons ###
        if 40 < Mouse[0] < 40 + Start_Button_Off.get_rect().width and 75 < Mouse[1] < 75 + Start_Button_Off.get_rect().height:
            Screen.blit(Start_Button_On, (40, 75))
            Screen.blit(About_Button_Off, (40, 175))
            if Click[0] == 1:
                menu = False
                selection = True
                Player_1 = Player()
                Player_2 = Player()
                Selection_Screen()
        elif 40 < Mouse[0] < 40 + About_Button_Off.get_rect().width and 175 < Mouse[1] <  175 + About_Button_Off.get_rect().height:
            Screen.blit(About_Button_On, (40, 175))
            Screen.blit(Start_Button_Off, (40, 75))
            Screen.blit(Stats_Button_Off, (40, 375))
            if Click[0] == 1:
                menu = False
                about = True
                About()

        elif 40 < Mouse[0] < 40 + Stats_Button_Off.get_rect().width and 375 < Mouse[1] < 375 + Stats_Button_Off.get_rect().height:
            Screen.blit(Stats_Button_On, (40, 375))
            Screen.blit(About_Button_Off, (40, 175))
            Screen.blit(Start_Button_Off, (40, 75))
            if Click[0] == 1:
                menu = False
                stats = True
                Stats()

        else:
            Screen.blit(Start_Button_Off, (40, 75))
            Screen.blit(About_Button_Off, (40, 175))
            Screen.blit(Stats_Button_Off, (40, 375))

        pygame.display.update()
        Clock.tick(64)

##################################### ABOUT #####################################

def About():
    global menu, about, selection
    font = pygame.font.SysFont("Helvetica", 35)
    while about:
        Mouse = pygame.mouse.get_pos()
        Click = pygame.mouse.get_pressed()
        for event in pygame.event.get():
            if event.type == pygame.QUIT:
                about = False
                Teams_Stats_Saves.close()
                pygame.quit()

        Screen.blit(About_Background, (0, 0))
        Info1 = font.render("Instituto Tecnológico de Costa Rica", True, white)
        Screen.blit(Info1, (35, 200))
        Info2 = font.render("Computer Engineering", True, white)
        Screen.blit(Info2, (35, 240))
        Info3 = font.render("Taller de Programación", True, white)
        Screen.blit(Info3, (35, 280))
        Info4 = font.render("Profesor: Milton Villegas Lemus", True, white)
        Screen.blit(Info4, (35, 320))
        Info5 = font.render("Estudiante: Víctor Ignacio Castrillo Muñoz", True, white)
        Screen.blit(Info5, (35, 360))
        Info6 = font.render("Estudiante: Joseph González Pastora", True, white)
        Screen.blit(Info6, (35, 400))
        Info7 = font.render("Lenguaje de Programación: Python", True, white)
        Screen.blit(Info7, (35, 440))
        Info8 = font.render("Versión de Python: 3.2.4", True, white)
        Screen.blit(Info8, (35, 480))
        
        ### Back to Menu Button ###
        if 675 < Mouse[0] < 675 + Menu_Button_Off.get_rect().width and 575 < Mouse[1] < 575 + Menu_Button_Off.get_rect().height:
            Screen.blit(Menu_Button_On, (675, 575))
            if Click[0] == 1:
                menu = True
                about = False
                Menu()
        else:
            Screen.blit(Menu_Button_Off, (675, 575))

        pygame.display.update()
        Clock.tick(64)

##################################### STATS #####################################

def Stats():
    global menu, about, selection, Player_1, Player_2, stats
    font = pygame.font.SysFont("Helvetica", 35)
    while stats:
        Mouse = pygame.mouse.get_pos()
        Click = pygame.mouse.get_pressed()
        for event in pygame.event.get():
            if event.type == pygame.QUIT:
                stats = False
                Teams_Stats_Saves.close()
                pygame.quit()

        Screen.blit(About_Background, (0, 0))

        Team_Text = font.render("Choose your Team", True, white)
        BM_Text = font.render("Bayern Munich", True, white)

        Screen.blit(BM_Text, (ScreenWidth/2 - BM_Text.get_rect().width/2, 200))

        if ScreenWidth/2 - BM_Text.get_rect().width/2 < Mouse[0] < ScreenWidth/2 + BM_Text.get_rect().width/2 and 200 < Mouse[1] < 200 + BM_Text.get_rect().height:
            if Click[0] == 1:
                stats = False
                BM_Stats = True
                while BM_Stats:
                    Mouse = pygame.mouse.get_pos()
                    Click = pygame.mouse.get_pressed()
                    for event in pygame.event.get():
                        if event.type == pygame.QUIT:
                            BM_Stats = False
                            Teams_Stats_Saves.close()
                            pygame.quit()
                    Screen.blit(About_Background, (0, 0))

                    Teams_Stats_Saves.seek(0)
                    text1 = font.render(Teams_Stats_Saves.readline()[:-2], True, white)
                    text2 = font.render(Teams_Stats_Saves.readline()[:-2], True, white)
                    text3 = font.render(Teams_Stats_Saves.readline()[:-2], True, white)
                    Screen.blit(text1, (50, 180))
                    Screen.blit(text2, (50, 220))
                    Screen.blit(text3, (50, 260))

                    back = font.render("Back", True, gray)
                    Screen.blit(back, (ScreenWidth - back.get_rect().width - 10, ScreenHeight - back.get_rect().height - 10))
                    if ScreenWidth - back.get_rect().width - 10 < Mouse[0] < ScreenWidth - 10 and ScreenHeight - back.get_rect().height - 10 < Mouse[1] < ScreenHeight - 10:
                        if Click[0] == 1:
                            BM_Stats = False
                            stats = True
                    pygame.display.update()
                    Clock.tick(64)

        ### Back to Menu Button ###
        if 675 < Mouse[0] < 675 + Menu_Button_Off.get_rect().width and 575 < Mouse[1] < 575 + Menu_Button_Off.get_rect().height:
            Screen.blit(Menu_Button_On, (675, 575))
            if Click[0] == 1:
                menu = True
                stats = False
                Menu()
        else:
            Screen.blit(Menu_Button_Off, (675, 575))

        pygame.display.update()
        Clock.tick(64)

################################# TEAM SELECTION ################################

def Selection_Screen():
    global menu, about, selection, Player_1, Player_2, stats
    choice = 0
    Bayern = True
    Borussia = True
    Real = True
    Players = [Player_1, Player_2]
    while selection:
        Mouse = pygame.mouse.get_pos()
        Click = pygame.mouse.get_pressed()
        for event in pygame.event.get():
            if event.type == pygame.QUIT:
                selection = False
                Teams_Stats_Saves.close()
                pygame.quit()

        Screen.blit(Selection_Background, (0, 0))
        ### Choose Team ###
        if Player_2.Team == None and choice == 0:
            if Player_1.Team == None:
                if Bayern:
                    Screen.blit(Bayern_Munchen_Logo, (75, ScreenHeight/2 - Bayern_Munchen_Logo.get_rect().height/2))
                if Borussia:
                    Screen.blit(Borussia_Dortmund_Logo, (350, ScreenHeight/2 - Borussia_Dortmund_Logo.get_rect().height/2))
                if Real:
                    Screen.blit(Real_Madrid_Logo, (625, ScreenHeight/2 - Borussia_Dortmund_Logo.get_rect().height/2))
                if 75 < Mouse[0] < 75 + Bayern_Munchen_Logo.get_rect().width and ScreenHeight/2 - Bayern_Munchen_Logo.get_rect().height/2 < Mouse[1] < ScreenHeight/2 + Bayern_Munchen_Logo.get_rect().height/2 and Bayern:
                    if Click[0] == 1:
                        Bayern = False
                        Player_1.Team = 0
                if 350 < Mouse[0] < 350 + Borussia_Dortmund_Logo.get_rect().width and ScreenHeight/2 - Borussia_Dortmund_Logo.get_rect().height/2 < Mouse[1] < ScreenHeight/2 + Borussia_Dortmund_Logo.get_rect().height/2 and Borussia:
                    if Click[0] == 1:
                        Borussia = False
                        Player_1.Team = 1
                if 625 < Mouse[0] < 625 + Real_Madrid_Logo.get_rect().width and ScreenHeight/2 - Real_Madrid_Logo.get_rect().height/2 < Mouse[1] < ScreenHeight/2 + Real_Madrid_Logo.get_rect().height/2 and Real:
                    if Click[0] == 1:
                        Real = False
                        Player_1.Team = 2
            else:
                if Bayern:
                    Screen.blit(Bayern_Munchen_Logo, (75, ScreenHeight/2 - Bayern_Munchen_Logo.get_rect().height/2))
                if Borussia:
                    Screen.blit(Borussia_Dortmund_Logo, (350, ScreenHeight/2 - Borussia_Dortmund_Logo.get_rect().height/2))
                if Real:
                    Screen.blit(Real_Madrid_Logo, (625, ScreenHeight/2 - Borussia_Dortmund_Logo.get_rect().height/2))
                if 75 < Mouse[0] < 75 + Bayern_Munchen_Logo.get_rect().width and ScreenHeight/2 - Bayern_Munchen_Logo.get_rect().height/2 < Mouse[1] < ScreenHeight/2 + Bayern_Munchen_Logo.get_rect().height/2 and Bayern:
                    if Click[0] == 1:
                        Bayern = False
                        Real = False
                        Borussia = False
                        Player_2.Team = 0
                        choice += 1
                if 350 < Mouse[0] < 350 + Borussia_Dortmund_Logo.get_rect().width and ScreenHeight/2 - Borussia_Dortmund_Logo.get_rect().height/2 < Mouse[1] < ScreenHeight/2 + Borussia_Dortmund_Logo.get_rect().height/2 and Borussia:
                    if Click[0] == 1:
                        Borussia = False
                        Real = False
                        Bayern = False
                        Player_2.Team = 1
                        choice += 1
                if 625 < Mouse[0] < 625 + Real_Madrid_Logo.get_rect().width and ScreenHeight/2 - Real_Madrid_Logo.get_rect().height/2 < Mouse[1] < ScreenHeight/2 + Real_Madrid_Logo.get_rect().height/2 and Real:
                    if Click[0] == 1:
                        Real = False
                        Borussia = False
                        Bayern = False
                        Player_2.Team = 2
                        choice += 1
        ### Goalkeeper ###
        if Player_2.Goalkeeper == None and choice == 1:
            if Player_1.Goalkeeper == None:
                if Player_1.Team == 0:
                    Screen.blit(Neuer_Card, (ScreenWidth/4 - Neuer_Card.get_rect().width/2, ScreenHeight/2 - Neuer_Card.get_rect().height/2))
                    Screen.blit(Starke_Card, (ScreenWidth*2/4 - Starke_Card.get_rect().width/2, ScreenHeight/2 - Starke_Card.get_rect().height/2))
                    Screen.blit(Ulreich_Card, (ScreenWidth*3/4 - Neuer_Card.get_rect().width/2, ScreenHeight/2 - Neuer_Card.get_rect().height/2))
                if Player_1.Team == 1:
                    Screen.blit(Burki_Card, (ScreenWidth/4 - Neuer_Card.get_rect().width/2, ScreenHeight/2 - Neuer_Card.get_rect().height/2))
                    Screen.blit(Weidenfeller_Card, (ScreenWidth*2/4 - Starke_Card.get_rect().width/2, ScreenHeight/2 - Starke_Card.get_rect().height/2))
                    Screen.blit(Bonmann_Card, (ScreenWidth*3/4 - Neuer_Card.get_rect().width/2, ScreenHeight/2 - Neuer_Card.get_rect().height/2))
                if Player_1.Team == 2:
                    Screen.blit(Navas_Card, (ScreenWidth/4 - Neuer_Card.get_rect().width/2, ScreenHeight/2 - Neuer_Card.get_rect().height/2))
                    Screen.blit(Casilla_Card, (ScreenWidth*2/4 - Starke_Card.get_rect().width/2, ScreenHeight/2 - Starke_Card.get_rect().height/2))
                    Screen.blit(Yanez_Card, (ScreenWidth*3/4 - Neuer_Card.get_rect().width/2, ScreenHeight/2 - Neuer_Card.get_rect().height/2))
                if ScreenWidth/4 - Neuer_Card.get_rect().width/2 < Mouse[0] < ScreenWidth/4 + Neuer_Card.get_rect().width/2 and ScreenHeight/2 - Neuer_Card.get_rect().height/2 < Mouse[1] < ScreenHeight/2 + Neuer_Card.get_rect().height/2:
                    if Click[0] == 1:
                        Player_1.Goalkeeper = 0
                if ScreenWidth*2/4 - Starke_Card.get_rect().width/2 < Mouse[0] < ScreenWidth*2/4 + Starke_Card.get_rect().width/2 and ScreenHeight/2 - Starke_Card.get_rect().height/2 < Mouse[1] < ScreenHeight/2 + Starke_Card.get_rect().height/2:
                    if Click[0] == 1:
                        Player_1.Goalkeeper = 1
                if ScreenWidth*3/4 - Ulreich_Card.get_rect().width/2 < Mouse[0] < ScreenWidth*3/4 + Ulreich_Card.get_rect().width/2 and ScreenHeight/2 - Ulreich_Card.get_rect().height/2 < Mouse[1] < ScreenHeight/2 + Ulreich_Card.get_rect().height/2:
                    if Click[0] == 1:
                        Player_1.Goalkeeper = 2
            else:
                if Player_2.Team == 0:
                    Screen.blit(Neuer_Card, (ScreenWidth/4 - Neuer_Card.get_rect().width/2, ScreenHeight/2 - Neuer_Card.get_rect().height/2))
                    Screen.blit(Starke_Card, (ScreenWidth*2/4 - Starke_Card.get_rect().width/2, ScreenHeight/2 - Starke_Card.get_rect().height/2))
                    Screen.blit(Ulreich_Card, (ScreenWidth*3/4 - Neuer_Card.get_rect().width/2, ScreenHeight/2 - Neuer_Card.get_rect().height/2))
                if Player_2.Team == 1:
                    Screen.blit(Burki_Card, (ScreenWidth/4 - Neuer_Card.get_rect().width/2, ScreenHeight/2 - Neuer_Card.get_rect().height/2))
                    Screen.blit(Weidenfeller_Card, (ScreenWidth*2/4 - Starke_Card.get_rect().width/2, ScreenHeight/2 - Starke_Card.get_rect().height/2))
                    Screen.blit(Bonmann_Card, (ScreenWidth*3/4 - Neuer_Card.get_rect().width/2, ScreenHeight/2 - Neuer_Card.get_rect().height/2))
                if Player_2.Team == 2:
                    Screen.blit(Navas_Card, (ScreenWidth/4 - Neuer_Card.get_rect().width/2, ScreenHeight/2 - Neuer_Card.get_rect().height/2))
                    Screen.blit(Casilla_Card, (ScreenWidth*2/4 - Starke_Card.get_rect().width/2, ScreenHeight/2 - Starke_Card.get_rect().height/2))
                    Screen.blit(Yanez_Card, (ScreenWidth*3/4 - Neuer_Card.get_rect().width/2, ScreenHeight/2 - Neuer_Card.get_rect().height/2))
                if ScreenWidth/4 - Neuer_Card.get_rect().width/2 < Mouse[0] < ScreenWidth/4 + Neuer_Card.get_rect().width/2 and ScreenHeight/2 - Neuer_Card.get_rect().height/2 < Mouse[1] < ScreenHeight/2 + Neuer_Card.get_rect().height/2:
                    if Click[0] == 1:
                        Player_2.Goalkeeper = 0
                        choice += 1
                if ScreenWidth*2/4 - Starke_Card.get_rect().width/2 < Mouse[0] < ScreenWidth*2/4 + Starke_Card.get_rect().width/2 and ScreenHeight/2 - Starke_Card.get_rect().height/2 < Mouse[1] < ScreenHeight/2 + Starke_Card.get_rect().height/2:
                    if Click[0] == 1:
                        Player_2.Goalkeeper = 1
                        choice += 1
                if ScreenWidth*3/4 - Ulreich_Card.get_rect().width/2 < Mouse[0] < ScreenWidth*3/4 + Ulreich_Card.get_rect().width/2 and ScreenHeight/2 - Ulreich_Card.get_rect().height/2 < Mouse[1] < ScreenHeight/2 + Ulreich_Card.get_rect().height/2:
                    if Click[0] == 1:
                        Player_2.Goalkeeper = 2
                        choice += 1
        ### First Shooter ###
        if Player_2.Shooter_1 == None and choice == 2:
            if Player_1.Shooter_1 == None:
                if Player_1.Team == 0:
                    Positions = [(ScreenWidth/5 - 75, ScreenHeight/4 - 235/2), (ScreenWidth*2/5 - 75, ScreenHeight/4 - 235/2), (ScreenWidth*3/5 - 75, ScreenHeight/4 - 235/2), (ScreenWidth*4/5 - 75, ScreenHeight/4 - 235/2), (ScreenWidth/4 - 75, ScreenHeight*3/4 - 235/2), (ScreenWidth*2/4 - 75, ScreenHeight*3/4 - 235/2), (ScreenWidth*3/4 - 75, ScreenHeight*3/4 - 235/2)]
                    pos = 0
                    for Shooter in BM_Shooters:
                        Screen.blit(Shooter, Positions[pos])
                        pos += 1
                if Player_1.Team == 1:
                    Positions = [(ScreenWidth/5 - 75, ScreenHeight/4 - 235/2), (ScreenWidth*2/5 - 75, ScreenHeight/4 - 235/2), (ScreenWidth*3/5 - 75, ScreenHeight/4 - 235/2), (ScreenWidth*4/5 - 75, ScreenHeight/4 - 235/2), (ScreenWidth/4 - 75, ScreenHeight*3/4 - 235/2), (ScreenWidth*2/4 - 75, ScreenHeight*3/4 - 235/2), (ScreenWidth*3/4 - 75, ScreenHeight*3/4 - 235/2)]
                    pos = 0
                    for Shooter in BD_Shooters:
                        Screen.blit(Shooter, Positions[pos])
